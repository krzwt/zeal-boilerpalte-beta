#!/bin/sh

echo "ğŸ” Checking spelling in commit message..."

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# âœ… Commit length validation
min_len=10
max_len=99
actual_len=${#commit_msg}

if [ "$actual_len" -lt "$min_len" ]; then
  echo "ğŸš« Commit message is too short ($actual_len chars). Must be at least $min_len characters."
fi

if [ "$actual_len" -gt "$max_len" ]; then
  echo "ğŸš« Commit message is too long ($actual_len chars). Must be under $max_len characters."
fi

# âœ… Spell check using cspell
echo "$commit_msg" | npx cspell --languageId plaintext stdin

if [ $? -ne 0 ]; then
  echo "ğŸš« Spelling errors found in commit message. Please fix them."
fi

echo "âœ… No spelling mistakes found and message length is valid!"
